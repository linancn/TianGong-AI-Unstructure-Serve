    "version": "0.2.0",
    "configurations": [
        {
            "name": "UnstructureServe",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload",
                "--reload-dir",
                "src",
                "--reload-exclude",
                "weaviate/**",
                "--host",
                "0.0.0.0",
                "--port",
                "8770"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "GPU_IDS": "0,1,2"
            }
        }
    ]
}