{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "UnstructureServe",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload",
                "--reload-dir",
                "src",
                "--reload-exclude",
                "weaviate/**",
                "--reload-exclude",
                "minio/**",
                "--reload-exclude",
                ".venv/**",
                "--reload-exclude",
                "input/**",
                "--reload-exclude",
                "output/**",
                "--reload-exclude",
                "pdfs/**",
                "--host",
                "0.0.0.0",
                "--port",
                "8770"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "GPU_IDS": "0",
                "FASTAPI_AUTH": "false",
                "MINERU_VLLM_SERVER_URLS": "http://127.0.0.1:30000",
                "VISION_PROVIDER": "vllm",
                "VISION_MODEL": "Qwen/Qwen3-VL-30B-A3B-Instruct",
                "VISION_CONTEXT_WINDOW": "4"
            }
        }
    ]
}
