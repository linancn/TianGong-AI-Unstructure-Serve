{
  "apps": [
    {
      "name": "unstructured-gunicorn",
      "cwd": ".",
      "script": ".venv/bin/gunicorn",
      "interpreter": "none",
      "args": "-k uvicorn.workers.UvicornWorker -w 4 -b 0.0.0.0:7770 --timeout 86400 --graceful-timeout 86400 --keep-alive 120 src.main:app",
      "env": {
        "GPU_IDS": "0,1,2",
        "MINERU_MODEL_SOURCE": "modelscope",
        "TABLE_OCR": "paddle",
        "VISION_PROVIDER": "gemini",
        "OCR_AGENT": "unstructured.partition.utils.ocr_models.paddle_ocr.OCRAgentPaddle"
      },
      "out_file": "gunicorn.log",
      "error_file": "gunicorn.log",
      "time": true
    }
  ]
}
